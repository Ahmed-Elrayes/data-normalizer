{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "elrayes/data-normalizer",
  "description": "Data Normalizer: recursively normalize data and access it via array, object, and dot-notation (with escaped dots).",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ahmed Elrayes",
      "email": "ahmedwaill63@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5 || ^11.0"
  },
  "autoload": {
    "psr-4": {
      "Elrayes\\Normalizer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Elrayes\\Normalizer\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Elrayes\\Normalizer\\Providers\\NormalizerServiceProvider"
      ],
      "aliases": {
        "Normalizer": "Elrayes\\Normalizer\\Facades\\Normalizer"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
